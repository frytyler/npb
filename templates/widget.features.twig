{{ settings.before_widget | raw }}
{% for post in posts %}
	<header class="primary">
		{{ settings.before_title|raw }}
		{% if post.featureinfo[lang].feature_title %}
			{{ post.featureinfo[lang].feature_title }}
		{% else %}
			{{ post.title|raw }}
		{% endif %}
		{{ setttings.after_title|raw }}
	</header>
	<article class="primary">
		{% if post.featureinfo[lang].feature_description %}
			{{ post.featureinfo[lang].feature_description|raw }}
		{% else %}
			{{ post.content|raw }}
		{% endif %}
		{% if post.featureinfo[lang].btn_text %}
			<a class="btn btn-large btn-block" href="{{ post.featureinfo[lang].btn_link|e }}" target="_blank">{{ post.featureinfo[lang].btn_text }}</a>
		{% endif %}
	</article>
{% endfor %}
{{ settings.after_widget | raw }}